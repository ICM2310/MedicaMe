<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Borde superior mÃ¡s claro -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <gradient
                android:startColor="#BFFFFF"
                android:endColor="#ADDDDD"
                android:type="linear"
                android:angle="90" />
            <padding android:bottom="2dp" />
        </shape>
    </item>

    <!-- Sombra del borde -->
    <item android:bottom="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <gradient
                android:startColor="#00055000"
                android:endColor="#24000000"
                android:type="linear"
                android:angle="45" />
        </shape>
    </item>




</layer-list>